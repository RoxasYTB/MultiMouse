{
  "name": "orionix",
  "version": "1.0.6",
  "description": "Application Orionix stable avec Electron.js",
  "main": "dist/main.js",
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "clean": "npx rimraf dist out release dist-app-new .cache",
    "build": "tsc && electron-rebuild --only=Orionix_raw_input",
    "build-safe": "tsc",
    "rebuild-all": "electron-rebuild",
    "rebuild-safe": "electron-rebuild --only=Orionix_raw_input",
    "lastBuild": "npx electron-rebuild -f -w Orionix_raw_input --arch=x64 --runtime=electron --version 26.6.10",
    "start": "powershell -ExecutionPolicy Bypass -File export-cursors.ps1 && npm run build-safe && npx electron .",
    "start-safe": "powershell -ExecutionPolicy Bypass -File export-cursors.ps1 && npm run build-safe && npx electron .",
    "test-start": "npm run build-safe && npx electron . --debug",
    "dev": "npm run build && electron . --dev",
    "compile": "tsc",
    "rebuild": "electron-rebuild",
    "precheck-dist": "node -e \"const fs=require('fs'); if(!fs.existsSync('dist/renderer-browser.js')){console.error('Error: dist/renderer-browser.js missing. Run npm run build-safe before packaging.'); process.exit(1)} else {console.log('dist/renderer-browser.js found.')}\"",
    "dist": "npm run precheck-dist && powershell -ExecutionPolicy Bypass -File export-cursors.ps1 && tsc && electron-builder --dir",
    "dist-safe": "npm run clean && powershell -ExecutionPolicy Bypass -File export-cursors.ps1 && npm run build-safe && electron-builder --win",
    "dist:win": "electron-builder --win",
    "dist:portable": "electron-builder --win portable",
    "dist:zip": "electron-builder --win zip",
    "dist:all": "electron-builder --win portable zip",
    "dist:nsis": "electron-builder --win nsis",
    "prepack:prod": "npm prune --production && npm dedupe",
    "pack:win": "electron-builder --win nsis portable zip",
    "dist:win-optimized": "npm run clean && npm run prepack:prod && npm run pack:win",
    "install-deps": "npm install",
    "watch": "tsc --watch"
  },
  "keywords": [
    "Orionix",
    "cursor",
    "overlay"
  ],
  "author": "Yohan",
  "license": "MIT",
  "gypfile": true,
  "dependencies": {
    "chokidar": "^4.0.3",
    "decode-ico": "^0.4.1",
    "eslint-plugin-unused-imports": "^4.2.0",
    "nan": "^2.23.0",
    "typescript-eslint": "^8.44.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/node": "^24.5.2",
    "canvas": "^3.2.0",
    "electron": "^26.0.0",
    "electron-builder": "^24.0.0",
    "electron-rebuild": "^3.2.9",
    "gifencoder": "^2.0.1",
    "jscodeshift": "^17.3.0",
    "node-addon-api": "^8.5.0",
    "node-gyp": "^10.0.0",
    "rimraf": "^5.0.10",
    "ts-morph": "^27.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "build": {
    "appId": "com.Orionix.app",
    "productName": "Orionix",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "dist/*.d.ts",
      "settingsInterface/**",
      "overlay.html",
      "export-cursors.ps1",
      "ani-to-gif.mjs",
      "dist/renderer-browser.js",
      "cursors.json",
      "cursorsToUse.json",
      "overlay.css",
      "config.json",
      "build/Release/Orionix_raw_input.node",
      "bin/**/*.node",
      "assets/**/**/*",
      "assets/**/*",
      "!**/*.{md,MD,markdown}",
      "!**/{test,tests,__tests__,spec,example,examples,benchmark}/**",
      "!**/*.map",
      "!dist/*.exe",
      "!dist/*.zip",
      "!dist/win-unpacked",
      "!**/{*.ts,*.tsx}",
      "!**/*.d.ts",
      "!**/*.{test.*,*.spec.*}",
      "!**/{README*,readme*}",
      "!**/{CHANGELOG*,changelog*}",
      "!**/.git*",
      "!**/.eslint*",
      "!**/.prettier*",
      "!**/docs/**",
      "!**/test/**",
      "!**/tests/**",
      "!**/coverage/**",
      "!**/scripts/**",
      "!**/demo/**"
    ],
    "compression": "normal",
    "artifactName": "Orionix-${version}-${arch}-${os}.${ext}",
    "afterPack": "scripts/afterPack.cjs",
    "win": {
      "target": [
        "nsis",
        "portable",
        "zip"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": false
    },
    "asarUnpack": [
      "**/*.node",
      "**/*.dll",
      "assets/**/*",
      "export-cursors.ps1",
      "ani-to-gif.mjs",
      "cursors.json",
      "cursorsToUse.json",
      "settingsInterface/**",
      "dist/**",
      "bin/**/*"
    ],
    "electronLanguages": [
      "en",
      "fr"
    ],
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "extraResources": [
      "assets/icon.ico"
    ],
    "extraMetadata": {
      "electronLocales": [
        "en-US",
        "fr"
      ]
    }
  }
}
